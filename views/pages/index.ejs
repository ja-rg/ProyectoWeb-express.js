<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <h1>Usuarios</h1>
        <ul class="list-group mb-3">
            <% users.forEach(function(user) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Nombre: <%= user.name %>, Email: <%= user.email %>
                            <form action="/delete" method="post" style="margin: 0;">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                </li>
                <% }); %>
        </ul>

        <h2>Agregar Nuevo Usuario</h2>
        <form action="/add" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn btn-success">Agregar</button>
        </form>

        <h2 class="mt-5">Actualizar Usuario</h2>
        <form action="/update" method="post">
            <div class="mb-3">
                <label for="userIdUpdate" class="form-label">Seleccione el Usuario</label>
                <select class="form-select" id="userIdUpdate" name="userId" required>
                    <option value="" disabled selected>Seleccione un usuario...</option>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>">
                            <%= user.name %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label for="nameUpdate" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nameUpdate" name="name">
            </div>
            <div class="mb-3">
                <label for="emailUpdate" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailUpdate" name="email">
            </div>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
    </div>
</body>

</html>